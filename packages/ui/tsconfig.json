{
  "compilerOptions": {
    "jsx": "react", 
    "target": "ES2015",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "lib": ["es2015", "dom"],
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "removeComments": false,
    "outDir": "dist"
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
